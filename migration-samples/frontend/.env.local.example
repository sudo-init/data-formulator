# Data Formulator Frontend Environment Configuration
# Copy this file to .env.local and configure the values for your environment

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# Application Configuration
NEXT_PUBLIC_APP_NAME="Data Formulator"
NEXT_PUBLIC_APP_VERSION="2.0.0"

# Development Configuration
NODE_ENV=development
NEXTAUTH_URL=http://localhost:3000

# Feature Flags
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# External Services
NEXT_PUBLIC_VEGA_CDN=https://cdn.jsdelivr.net/npm/vega@5
NEXT_PUBLIC_VEGA_LITE_CDN=https://cdn.jsdelivr.net/npm/vega-lite@5

# Performance Configuration
NEXT_PUBLIC_MAX_CHART_DATAPOINTS=10000
NEXT_PUBLIC_CHART_RENDER_TIMEOUT=30000

# Security Configuration (for production)
# NEXTAUTH_SECRET=your-secret-here
# CSP_ENABLED=true